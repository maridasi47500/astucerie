<%= form_with(model: tip) do |form| %>
  <% if tip.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(tip.errors.count, "error") %> prohibited this tip from being saved:</h2>

      <ul>
        <% tip.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.hidden_field :user_id %>
  </div>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :image, style: "display: block" %>
    <%= form.file_field :image %>
  </div>

  <div>
    <%= form.label :content, style: "display: block", class:"" %>
    <%= form.text_area :content, class:"mycontentastuce" %>
  </div>
  <div>
    <%= form.label :cat_ids, style: "display: block", class:"" %>
    <%= form.select(:cat_ids, options_for_select(Cat.all.collect{|j|[j.name, j.id]}),{ :prompt => "Please select"},
                                                                                                                                                                                                                { :multiple => true, :size => 5 }
                                                                                                                                                                                                                                                 ) %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
