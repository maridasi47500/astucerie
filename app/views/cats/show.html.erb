<p style="color: green"><%= notice %></p>

<p class="breadscrumb">Accueil > <%=@cat.name%></p>
<h2><%= @cat.name %></h2>
<p><i><%=@cat.description%></i></p>

    <div class="mydiv">
      <div class="article1 ">
        <%=render partial: "tips/mytipcat", as: :tip, collection: @cat.tips.firsttip%>
      </div>
      <div class="article2 ">
        <%=render partial: "tips/mytipcat", as: :tip, collection: @cat.tips.secondtip%>
      <div class="article3 ">
        <%=render partial: "tips/mytipcat", as: :tip, collection: @cat.tips.thirdtip%>
      </div>
      <div class="article4 ">
        <%=render partial: "tips/mytipcat", as: :tip, collection: @cat.tips.fourthtip%>
      </div>
      </div>

    </div>

    </div>
<div class="mytips">
  <div class="div1"><%if @tips.length > 0%>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <%=render partial: "tips/othertip", as: :tip, collection: @tips%>
        <%= paginate @tips %>

    </div>
  <%end%>
  </div>
  <div class="div2"><div class="card" style="width: 18rem;">
      <ul class="list-group list-group-flush">
        <%@mycats.each do |cat|%>
          <li class="list-group-item"><span class="catname"><%=cat.name%></span><span class="tipnb"><%=cat.nbtip%></span></li>
      <%end%>
      </ul>
    </div>
  </div>

</div>

<div>
  <%= link_to "Edit this cat", edit_cat_path(@cat) %> |
  <%= link_to "Back to cats", cats_path %>

  <%= button_to "Destroy this cat", @cat, method: :delete %>
</div>
